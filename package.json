{
  "name": "autopost-vn",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "seed": "ts-node --transpile-only scripts/seed.ts",
    "cron": "tsx scripts/cron-local.ts",
    "cron:local": "ts-node --transpile-only scripts/cron-local.ts",
    "cron:js": "node scripts/cron-scheduler.js",
    "cron:windows": "powershell -ExecutionPolicy Bypass -File scripts/autopost-cron.ps1",
    "cron:render": "node scripts/render-cron.js",
    "health": "curl http://localhost:3000/api/health || echo 'App not running'",
    "db:setup": "echo 'Import supabase/schema.sql into your Supabase project'",
    "test:api": "echo 'Test API endpoints - implement with your preferred testing framework'",
    "test:routing": "echo 'Test routing: localhost:3000 → /auth/signup → /auth/signin → /app'",
    "backend:check": "npm run type-check && npm run lint",
    "clear-cache": "rm -rf .next && npm run dev"
  },
  "dependencies": {
    "@auth/supabase-adapter": "^1.10.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/generative-ai": "^0.21.0",
    "@supabase/ssr": "0.5.2",
    "@supabase/supabase-js": "^2.57.0",
    "bcryptjs": "^3.0.2",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.542.0",
    "next": "^14.2.32",
    "next-auth": "^4.24.7",
    "node-fetch": "^3.3.2",
    "qrcode": "^1.5.4",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "20.14.11",
    "@types/qrcode": "^1.5.5",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/supertest": "^6.0.3",
    "autoprefixer": "10.4.20",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.6",
    "jest": "^30.1.2",
    "jest-environment-node": "^30.1.2",
    "postcss": "8.4.45",
    "supertest": "^7.1.4",
    "tailwindcss": "3.4.10",
    "ts-node": "10.9.2",
    "typescript": "5.5.4"
  }
}
